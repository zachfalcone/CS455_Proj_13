<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cse455.csusb.bookngo.ViewActivity"
    android:id="@+id/view_view"
    android:background="@color/b2gPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/view_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#EEEEEE"
                    android:src="@drawable/ic_book"
                    android:scaleType="center"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:id="@+id/view_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:minHeight="75dp">

                    <TextView
                        android:id="@+id/view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Textbook Name"
                        android:textColor="@color/b2gPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/view_isbn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0000000001234"
                        android:textColor="@color/b2gPrimaryDark"
                        android:textStyle="normal"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_book_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp"
                    android:minHeight="75dp">

                    <TextView
                        android:id="@+id/view_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:padding="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="Excellent"
                        android:textColor="@color/b2gPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/view_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:padding="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:text="$10"
                        android:textColor="@color/text_price"
                        android:textStyle="bold"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_school_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:minHeight="75dp">

                    <TextView
                        android:id="@+id/view_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CSUSB"
                        android:textColor="@color/b2gPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/view_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Course"
                        android:textColor="@color/b2gPrimaryDark"
                        android:textStyle="normal"
                        android:textSize="15sp"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/view_professor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Professor Name"
                        android:textColor="@color/lightTextColor"
                        android:textStyle="normal"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:minHeight="75dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Description"
                        android:textColor="@color/b2gPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/view_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean sed semper mi. Aenean eget velit dui. Nam scelerisque hendrerit sem, varius mollis risus dictum in."
                        android:textColor="@color/b2gPrimaryDark"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>