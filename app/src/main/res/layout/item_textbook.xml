<android.support.v7.widget.CardView android:id="@+id/preview_card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#EEEEEE"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_book"
            android:scaleType="center"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/preview_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/preview_image">

            <TextView
                android:id="@+id/preview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Textbook Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="0dp"/>

            <TextView
                android:id="@+id/preview_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000001234"
                android:textStyle="normal"
                android:paddingBottom="0dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/preview_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Excellent"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_price"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="$10"
            android:id="@+id/preview_price"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>